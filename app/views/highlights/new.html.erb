<div class="highlight-form">
  <%= form_for :highlight, :url => highlights_path do |f| %>
    <div class="title">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="description">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="submit">
      <%= f.submit %>
    </div>
  <% end %>
</div>
